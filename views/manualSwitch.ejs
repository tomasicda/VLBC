<% include partials/header.ejs %>
<% include partials/navbar.ejs %>
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
<h1 class="text-center vlbc-colour-orange">Manual Switch</h1>
<div class="container">
    <div class="vlbc-table">
        <table class="table table-bordered table-striped">
                <tr>
                    <th>Channel #</th>
                    <th>Status</th>
                    <th>Switch</th>
                </tr>
            <tbody>
            <%
            // counter to limit number of channels will be displayed
            var displayingChannelCounter = 0;
            allChannels.forEach(function(channel) {
                // limiting how many channels will be displayed
                displayingChannelCounter++;
                if(displayingChannelCounter > 8) return false;

                var statusChannel = 'statusChannel-' + channel.channelNumber;
                var glypicon = 'glyphicon-off';
                var isToggled = '';
                if(channel.status === true) {
                    glypicon = 'glyphicon-flash';
                    isToggled = 'checked';
                }
            %>
            <tr>
                <td><%= channel.channelNumber %></td>
                <td>
                    <span id="<%= statusChannel %>" class="glyphicon <%= glypicon %>" aria-hidden="true"></span>
                </td>
                <td>
                    <input class="toggle-switch" type="checkbox" <%= isToggled %> data-channel="<%= channel.channelNumber %>" data-toggle="toggle" data-onstyle="success" data-offstyle="danger">
                </td>
            </tr>
            <% }); %>
            </tbody>
        </table>
    </div>
</div>
<script>
    $(function() {
        $('.toggle-switch').change(function() {
            var data = {
                channelNumber: $(this).attr('data-channel'),
                status: $(this).prop('checked')
            };
            $.ajax({
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json',
                url: 'manualSwitch/switch',
                success: function (channel) {
                    $('#statusChannel-' + channel.channelNum).toggleClass('glyphicon-off glyphicon-flash');
                }
            });
        })
    })
</script>
